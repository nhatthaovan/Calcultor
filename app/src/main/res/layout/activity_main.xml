<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:weightSum="3">
        <LinearLayout
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:radius="5dp"
            android:orientation="vertical"
            android:background="@color/border">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"

                android:layout_marginLeft="28dp"
                android:layout_marginRight="30dp">
                <TextView
                    android:id="@+id/brown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner2"
                    >
                </TextView>

                <TextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/corner"
                    android:fontFamily="@font/digital"
                    android:gravity="right|center"
                    android:text="0."
                    android:textSize="90sp"
                    android:textColorHint="@color/cardview_dark_background"


                    />
            </RelativeLayout>
            <TextView
                android:layout_width="150dp"
                android:layout_gravity="right"
                android:layout_marginRight="35dp"
                android:layout_height="match_parent"
                android:background="#111"
                android:backgroundTintMode="multiply"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/border_tv"
            android:weightSum="5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_function"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/border_tv"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/function1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/off"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="OFF">

                    </Button>

                    <Button
                        android:id="@+id/MRC"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="MRC">

                    </Button>

                    <Button
                        android:id="@+id/M_tru"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="M-">

                    </Button>

                    <Button
                        android:id="@+id/M_cong"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="M+">

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/border_tv">

                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/function2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/percent"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="%">

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="√"
                        android:textSize="20sp"
                        >

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="MC"
                        android:textSize="15sp"
                        >

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="MR"
                        android:textSize="15sp"
                        >

                    </Button>

                    <Button
                        android:id="@+id/div"
                        android:onClick="number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="÷"
                        android:textSize="25sp"
                        >

                    </Button>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/so1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                >
                <Button
                    android:text="+/-"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/cal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    >

                </Button>
                <Button
                    android:id="@+id/seven"
                    android:text="7"
                    android:textSize="25sp"
                    android:onClick="number"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    tools:ignore="OnClick">

                </Button>
                <Button
                    android:id="@+id/eight"
                    android:text="8"
                    android:onClick="number"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    tools:ignore="OnClick">

                </Button>
                <Button
                    android:id="@+id/nine"
                    android:text="9"
                    android:onClick="number"

                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    tools:ignore="OnClick">

                </Button>
                <Button
                    android:id="@+id/mult"
                    android:text="*"
                    android:textSize="35sp"
                    android:onClick="number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/cal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    tools:ignore="OnClick">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                >
                <Button
                    android:text="♪"
                    android:textSize="45sp"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/cal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    >

                </Button>
                <Button
                    android:id="@+id/four"
                    android:text="4"
                    android:textSize="25sp"
                    android:onClick="number"

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    tools:ignore="OnClick">

                </Button>
                <Button
                    android:id="@+id/five"
                    android:text="5"
                    android:textSize="25sp"
                    android:onClick="number"

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    tools:ignore="OnClick">

                </Button>
                <Button
                    android:id="@+id/six"
                    android:text="6"
                    android:textSize="25sp"
                    android:onClick="number"

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    tools:ignore="OnClick">

                </Button>
                <Button
                    android:id="@+id/sub"
                    android:text="-"
                    android:textSize="35sp"
                    android:onClick="number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/cal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    >

                </Button>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">


                <LinearLayout

                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_height="wrap_content"
                        >

                        <Button
                            android:id="@+id/CE"
                            android:textSize="20sp"
                            android:onClick="number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/function"
                            android:text="CE"
                            android:textColor="@color/black">

                        </Button>

                        <Button
                            android:id="@+id/one"
                            android:textSize="25sp"
                            android:onClick="number"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:text="1"
                            android:textColor="@color/black"
                            tools:ignore="OnClick">

                        </Button>

                        <Button
                            android:id="@+id/two"
                            android:textSize="25sp"
                            android:onClick="number"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:text="2"
                            android:textColor="@color/black"
                            tools:ignore="OnClick">

                        </Button>

                        <Button
                            android:id="@+id/three"
                            android:textSize="25sp"
                            android:onClick="number"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:text="3"
                            android:textColor="@color/black"
                            tools:ignore="OnClick">

                        </Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_height="wrap_content"
                        >

                        <Button
                            android:id="@+id/on"
                            android:textSize="20sp"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/function"
                            android:text="ON/C"
                            android:textColor="@color/black">

                        </Button>

                        <Button
                            android:id="@+id/zero"
                            android:textSize="25sp"
                            android:onClick="number"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:text="0"
                            android:textColor="@color/black"
                            tools:ignore="OnClick">

                        </Button>

                        <Button
                            android:id="@+id/dot"
                            android:textSize="25sp"
                            android:onClick="number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:text="."
                            android:textColor="@color/black">

                        </Button>

                        <Button
                            android:id="@+id/equall"
                            android:textSize="25sp"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:text="="
                            android:textColor="@color/black">

                        </Button>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lcong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="-10dp">


                    <Button
                        android:id="@+id/summ"
                        android:onClick="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cal"
                        android:text="+"
                        android:textSize="35sp"
                        >

                    </Button>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>



